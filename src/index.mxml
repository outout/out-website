		import mx.events.ListEvent;
		private function tree_itemClick(evt:ListEvent):void {
				var t:Tree = evt.currentTarget as Tree;
				var dataObj:Object = evt.itemRenderer.data;
				
				if (dataObj.hasOwnProperty("@LargeImage")) {
					
					var url:String = dataObj.@texturl.toString();
					var loadit:URLLoader = new URLLoader();
					loadit.addEventListener(Event.COMPLETE,completeHandler);
                    loadit.load(new URLRequest(url));
					Image1.source = dataObj.@LargeImage;
					ImageLinkBar.selectedIndex=0;
				} else if (t.dataDescriptor.isBranch(t.selectedItem)) {
					Image1.source = null;
					panel.status = "";
				}
			}
			private function completeHandler(event:Event):void {
			autortext.text = event.currentTarget.data as String;
				}

			private function tree_labelFunc(item:Object):String {
				var suffix:String = "";
				if (tree.dataDescriptor.isBranch(item)) {
					suffix = " (" + item.children().length() + ")";
				}
				return item.@name + suffix;
			}


			private function Image1_complete(evt:Event):void {
				panel.status = (Image1.bytesTotal/1024).toFixed(2) + 'KB';
			}
